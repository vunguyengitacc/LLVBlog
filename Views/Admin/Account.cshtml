
@model PagedList.IPagedList<LLVBog.Models.Account>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12" style="color:forestgreen;font:20px">
        <h1 class="page-header" style="text-align:center"><strong>TÀI KHOẢN</strong></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="color:green;font-size:18px">
                Bảng danh sách tài khoản
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">


                            @using (Html.BeginForm("Account", "Admin", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
                            {
                                <form class="form-inline mr-2">
                                    <div class="col-sm-6">
                                        <div id="dataTables-example_filter" class="dataTables_filter">
                                            <input value="@ViewBag.searchkey" name="searchkey" type="text" class="form-control bg-light border-0 small" placeholder="Nhập từ khóa..."
                                                   aria-label="Search" aria-describedby="basic-addon2">

                                            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                                            <button class="btn btn-info" type="button" onclick="window.location.href='/Admin/Account'">Reset </button>
                                        </div>

                                    </div>
                                </form>
                            }
                            <br />
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-sm-12">

                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr bold="1" style="background-color: forestgreen">
                                                    <th>Tên người dùng</th>
                                                    <th>Tên</th>
                                                    <th>Họ</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Gmail</th>
                                                    <th>Mã vai trò</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Username</td>
                                                        <td>@item.FirstName</td>
                                                        <td>@item.LastName</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td>@item.Gmail</td>
                                                        <td>@item.RoleID</td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <!-- Thêm mã phân trang -->
                                        <br />
                                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                                        @Html.PagedListPager(Model, page => Url.Action("Account", new { page }))
                                        <!-- Kết thúc -->
                                    </div>
                                </div>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>