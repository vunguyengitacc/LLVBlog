@model IEnumerable<LLVBog.Models.Blog>

@{ ViewBag.Title = "Statis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<div class="row">
    <div class="col-lg-12" style="color:blue">
        <h1 class="page-header">STATISTICAL</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="color:blue">
                STATISTICAL TABLE
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">

                            <div class="col-sm-6">
                                <div class="dataTables_length" id="dataTables-example_length">
                                    <td>
                                        <input type="radio" name="Timeshort" checked>
                                        <select>
                                            <option value="alltime">All time</option>
                                            <option value="today">Today</option>
                                            <option value="yesterday">Yesterday</option>
                                            <option value="thisweek">This Week</option>
                                            <option value="lastweek">Last Week</option>

                                            <option value="thismonth">This Month</option>
                                            <option value="lastmonth">Last Month</option>
                                            <option value="thisyear">This Year</option>
                                            <option value="lastyear">Last Year</option>
                                        </select>

                                    </td>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div id="dataTables-example_filter" class="dataTables_filter">
                                    <label>
                                        Search:
                                        <input type="search" class="form-control input-sm" aria-controls="dataTables-example" />
                                    </label>
                                </div>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-sm-12">

                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr style="background-color:cornflowerblue">

                                            <th>BlogId</th>
                                            <th>Title</th>
                                            <th>Content</th>
                                            <th>CreatedDate</th>
                                            <th>UpdateDate</th>
                                            <th>DeleteDate</th>
                                            <th>isBlock</th>
                                            <th>Username</th>
                                            <th>TotalView</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.BlogId</td>
                                                <td>@item.Title</td>
                                                <td><a href="~/Blog/Content/@item.BlogId">Đi tới bài viết</a></td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.UpdatedDate</td>
                                                <td>@item.DeletedDate</td>
                                                <td>@item.isBlock</td>
                                                <td>@item.Username</td>
                                                <td>@item.TotalView</td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>



    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->