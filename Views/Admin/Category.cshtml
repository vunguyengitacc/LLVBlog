@model PagedList.IPagedList<LLVBog.Models.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12" style="color:forestgreen">
        <h1 class="page-header" style="text-align:center"><strong>THỂ LOẠI</strong></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="color: forestgreen; font-size: 18px">
                Bảng danh sách các thể loại
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            @using (Html.BeginForm("Category", "admin", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
                            {
                                <form class="form-inline mr-2">
                                    <div class="col-sm-6">
                                        <div id="dataTables-example_filter" class="dataTables_filter">
                                            <input value="@ViewBag.searchkey" name="searchkey" type="text" class="form-control bg-light border-0 small" placeholder="Nhập từ khóa..."
                                                   aria-label="Search" aria-describedby="basic-addon2">

                                            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                                            <button class="btn btn-info" type="button" onclick="window.location.href='/admin/Category'">Reset </button>
                                        </div>
                                    </div>
                                </form>
                            }
                            <div class="col-sm-6">
                                <div class="themtheloai" style="text-align:right">
                                    <form method="get" action="/admin/AddCategories">
                                        <button type="submit" style="background-color:forestgreen;font-size:16px"><strong>Thêm mới</strong><img src="~/Content/Admin/images/create.png" /></button>
                                    </form>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-sm-12">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr bold="1" style="background-color:forestgreen">
                                                    <th>Tên thể loại</th>
                                                    <th>Xóa</th>
                                                    <th>Chỉnh sửa</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>

                                                        <td>@item.Name</td>
                                                        <td><a href="/admin/DeleteCategories/@item.CategoryId"><img src="~/Content/Admin/images/delete1.png" />Xóa</a></td>
                                                        <td><a href="/admin/EditCategories/@item.CategoryId"><img src="~/Content/Admin/images/edit.png" />Chỉnh sửa</a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <!-- Thêm mã phân trang -->
                                        <br />
                                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                                        @Html.PagedListPager(Model, page => Url.Action("Category", new { page }))
                                        <!-- Kết thúc -->
                                    </div>
                                </div>
                                <!-- /.table-responsive -->

                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
</div>